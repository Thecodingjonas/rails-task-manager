<div class="container">
  <div class="row">
    <div class="col-6 offset-3">
      <%= simple_form_for(@task) do |t| %>
        <%= t.input :title %>
        <%= t.input :details %>
        <%= t.input :completed %>
        <%= t.submit class: 'btn btn-primary w-100' %>
      <% end %>
      <p class="btn btn-success w-50 my-3"><%= link_to 'HOME', tasks_url %></p>
    </div>
  </div>
</div>

